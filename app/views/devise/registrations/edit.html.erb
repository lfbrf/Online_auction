<div class="authform">
  <h3>Editar <%= resource_name.to_s.humanize %></h3>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
    <fieldset>
      <p>Deixe em Branco caso não deseje alterar sua senha.</p>
      <div class="form-group">
        <%= f.label :senha %>
        <%= f.password_field :password, :autocomplete => 'off', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :confirmar_senha %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </fieldset>
    <fieldset>
      <p>Por segurança voce precisa fornecer sua senha atual para editar sua conta.</p>
      <div class="form-group">
        <%= f.label :senha_atual %>
        <%= f.password_field :current_password, class: 'form-control' %>
      </div>
    </fieldset>
    <%= f.submit 'Atualizar', :class => 'button right' %>
  <% end %>
</div>
<div class="authform">
<h3>Cancelar a conta.</h3>
<%= button_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Voce tem Certeza?" }, :method => :delete, :class => 'button right' %>
</div>
