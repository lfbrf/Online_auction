<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <div class="form-group is-required">
      <%= f.label :Nome  %>
      <%= f.text_field :first_name, :autofocus => true, required:true ,  class: 'form-control ' %>
    </div>
    <div class="form-group is-required">
      <%= f.label :Sobrenome %>
      <%= f.text_field :last_name, :autofocus => true, required:true ,  class: 'form-control' %>
    </div> 
    <div class="form-group is-required">
      <%= f.label :Cidade %>
      <%= f.text_field :city, :autofocus => true, required:true ,   class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :Endereco %>
      <%= f.text_field :address, :autofocus => true,  class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cpf %>
      <%= f.text_field :cpf, :autofocus => true,  class: 'form-control' %>
    </div>
    <div class="form-group is-required">
      <%= f.label :Email %>
      <%= f.email_field :email,class: 'form-control', required:true   %>
    </div>
    <div class="form-group is-required">
      <%= f.label :Senha %>
      <%= f.password_field :password,class: 'form-control', required:true   %>
    </div>
    <div class="form-group is-required">
      <%= f.label :Repita_a_senha %>
      <%= f.password_field :password_confirmation,  class: 'form-control', required:true  %>
    </div>
     <%= f.submit 'Registre-se', :class => 'button right' %>
  <% end %>
</div>
